<div class="flex flex-col h-full">
    <div class="panel-header flex items-center justify-between px-3 py-2 shrink-0">
        <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Properties</span>
        @if (RefKey != null)
        {
            <span class="text-xs text-deltek font-medium bg-deltek-bg px-2 py-0.5 rounded">@RefKey</span>
        }
    </div>
    <div class="flex-1 overflow-auto">
        @if (Properties == null || Properties.Count == 0)
        {
            <p class="text-gray-400 text-xs p-3">Select an element to view properties.</p>
        }
        else
        {
            <table class="w-full text-xs">
                <tbody>
                    @foreach (var kv in Properties)
                    {
                        var isChanged = ChangedKeys.Contains(kv.Key);
                        <tr class="border-b border-gray-100 hover:bg-gray-50 @(isChanged ? "bg-blue-50" : "")">
                            <td class="px-3 py-1.5 text-gray-500 font-medium whitespace-nowrap">
                                @if (isChanged)
                                {
                                    <span class="text-deltek font-semibold">@kv.Key</span>
                                }
                                else
                                {
                                    @kv.Key
                                }
                            </td>
                            <td class="px-3 py-1.5 @(isChanged ? "text-deltek font-bold" : GetValueColor(kv.Key)) font-mono break-all">
                                @kv.Value
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@code {
    [Parameter] public string? RefKey { get; set; }
    [Parameter] public Dictionary<string, string>? Properties { get; set; }
    [Parameter] public HashSet<string> ChangedKeys { get; set; } = new();

    /// <summary>Highlight enriched pattern values with distinct colors.</summary>
    private static string GetValueColor(string key) => key switch
    {
        "Value" => "text-emerald-600",
        "ToggleState" => "text-blue-600",
        "IsSelected" => "text-blue-600",
        "ExpandCollapseState" => "text-blue-600",
        "RangeValue" or "RangeMinimum" or "RangeMaximum" => "text-cyan-600",
        "SelectedItems" => "text-cyan-600",
        "IsEnabled" => "text-amber-600",
        "IsOffscreen" => "text-amber-600",
        _ => "text-gray-700"
    };
}
